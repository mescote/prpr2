<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_gray">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/dark_gray"
            android:onClick="onClickGoBackEvents"/>
        <ImageView
            android:id="@+id/individual_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_event" />
        <TextView
            android:id="@+id/individual_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Event Title"
            android:textSize="20sp"
            android:textColor="@color/pink"/>
        <TextView
            android:id="@+id/individual_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="Description Text"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/start_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:text="00/00/0000"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/end_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:text="00/00/0000"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:text="Barcelona"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/type_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:text="Sport"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/participants_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:text="100"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/button_attend_event"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:onClick="onClickAttendEvent"
            android:text="@string/attendEventButton"
            android:textColor="@color/dark_gray"
            android:backgroundTint="@color/pink"/>
    </LinearLayout>
</LinearLayout>